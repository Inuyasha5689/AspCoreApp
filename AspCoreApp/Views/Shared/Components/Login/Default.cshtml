@model LoginViewModel
@{

}

<div class="ui raised very padded text container" style="margin-right: 5%">
    <h3 class="ui header centered">APP LOGIN FORM</h3>
    <form asp-controller="Main" asp-action="Authenticate" method="post" class="ui large form validate-me" role="form">
        <div class="ui stack segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="user icon"></i>
                    <input asp-for="Username" placeholder="Username"/>
                    <div asp-validation-for="Username"></div>
                </div>
            </div>
            <div class="field">
                <div class="ui left icon input">
                    <i class="lock icon"></i>
                    <input asp-for="Password" placeholder="Password" />
                    <div asp-validation-for="Password"></div>
                </div>
            </div>
            <div>
                <button class="ui red button">
                    <i class="lock icon"></i>
                    LOGIN
                </button>
            </div>
        </div>
        <div asp-validation-summary="All" class="ui error message"></div>
    </form>
</div>